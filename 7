#include<iostream>
using namespace std;
int main()
{
  int n, k;
  cin>>n;
  for(int i=0; i<n; i++)
  {
    for (k=0; k<i; k++) 
    {
      cout<<" ";
    }
    for(k=i;k<n;k++)
    {
      cout<<k+1;
    }
    cout<<endl;
  }
  for(int i=n-2; i>=0; i--)
  {
    for (k=0; k<i; k++) 
    {
      cout<<" ";
    }
    for(k=i;k<n;k++)
    {
      cout<<k+1;
    }
    cout<<endl;
  }
  return 0;
}
